<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:BuiltDifferentMobileApp.ViewModels"
             x:Class="BuiltDifferentMobileApp.Views.MyProfilePageCoach">

    <ContentPage.BindingContext>
        <viewmodels:MyProfilePageCoachViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="1" Text="Your Info" FontSize="Title" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"/>

            <StackLayout Grid.Row="1" Grid.Column="1" Spacing="12">
                <StackLayout Spacing="2">
                    <Label Text="Name" />
                    <Frame Padding="0" CornerRadius="6" BorderColor="{StaticResource LightGrey}">
                        <Entry IsEnabled="False" Text="{Binding Name}"/>
                    </Frame>
                </StackLayout>
                <StackLayout Spacing="2">
                    <Label Text="Type" />
                    <Frame Padding="0" CornerRadius="6" BorderColor="{StaticResource LightGrey}">
                        <Entry IsEnabled="False" Text="{Binding Type}"/>
                    </Frame>
                </StackLayout>
                <StackLayout Spacing="2">
                    <Label Text="Gender" />
                    <Frame Padding="0" CornerRadius="6" BorderColor="{StaticResource LightGrey}">
                        <Entry IsEnabled="False" Text="{Binding Gender}"/>
                    </Frame>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding IsAvailable}" VerticalOptions="Center" Color="{StaticResource RedSecondary}"/>
                    <Label Text="Available for new clients" VerticalOptions="Center"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding OffersWorkout}" VerticalOptions="Center" Color="{StaticResource RedSecondary}"/>
                    <Label Text="Offer workout coaching" VerticalOptions="Center"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding OffersMeal}" VerticalOptions="Center" Color="{StaticResource RedSecondary}"/>
                    <Label Text="Offer meal coaching" VerticalOptions="Center"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding OffersMeal}" VerticalOptions="Center" Color="{StaticResource RedPrimary}" IsEnabled="False"/>
                    <Label Text="Is verified" VerticalOptions="Center"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>